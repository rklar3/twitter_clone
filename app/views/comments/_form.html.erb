


<%= simple_form_for([@tweet, @tweet.comments.build]) do |f| %>


  <%= f.hidden_field  :name, {value: current_user.username}%>
  <%= f.hidden_field  :user_id, {value: current_user.id}%>


<div class="field">
<div class="control">
  <%= f.input :comment, label: false, input_html: {class: "textarea"}, wrapper: false, label_html: {class: "label"}, 
  placeholder: "compose a new tweet" %>
</div>
</div>

<%= f.button :submit, class: "button is-info" %>

<% end %>
    


